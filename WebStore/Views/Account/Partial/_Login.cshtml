@model LoginUserViewModel

<div class="login-form">
    <!--login form-->
    <h2>Войдите в свой аккаунт</h2>
    <form asp-controller="Account" asp-action="Login" asp-antiforgery="true">

        @Html.HiddenFor(model => model.ReturnUrl)

        <div class="form-group">
            <input asp-for="UserName" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <span>
                <input asp-for="RemeberMe" class="checkbox">
                <label asp-for="RemeberMe"></label>
            </span>
            <span asp-validation-for="RemeberMe" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-default">Войти</button>
    </form>
</div><!--/login form-->