@model WebStore.ViewModels.EmployeeView

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EmployeeDetails</title>
    <style>
        th, td
        {
            text-align:left;
            padding: 5px

        }

        .Center
        {
            text-align:center;

        }
    </style>
</head>
<body>
    <header>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/home/readconfig">Config</a></li>
            <li><a href="/TestPage.html">TestPage</a></li>
            <li><a href="/home/getemployees">Employees</a></li>
        </ul>
    </header>
    <content>
        <hr />
        <table>
            <thead>
                <tr>
                    <th colspan="2" class="Center">Сотрудник</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>Фамилия</th>
                    <td>@Model.SecondName</td>
                </tr>
                <tr>
                    <th>Имя</th>
                    <td>@Model.FirstName</td>
                </tr>
                <tr>
                    <th>Отчество</th>
                    <td>@Model.Patronymic</td>
                </tr>
                <tr>
                    <th>Возраст</th>
                    <td>@Model.Age</td>
                </tr>
                <tr>
                    <th colspan="2" class="Center">Дполнительно</th>
                </tr>
                <tr>
                    <th>Дата рождения</th>
                    <td>@Model.Birthday.ToShortDateString()</td>
                </tr>
                <tr>
                    <th>Принят на работу</th>
                    <td>@Model.StartWork.ToShortDateString()</td>
                </tr>
                <tr>
                    <th>Должность</th>
                    <td>@Model.Position</td>
                </tr>
            </tbody>
        </table>
        <hr />
        <p>@Html.ActionLink("Вернуться к списку", "GetEmployees")</p>
    </content>
    <footer>
    </footer>
</body>
</html>
