@model WebStore.ViewModels.EmployeeView

@{
    Layout = "_Layout";
    ViewBag.Title = "";
}

<table>
    <thead>
        <tr>
            <th colspan="2" class="Center">Сотрудник</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Id</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Фамилия</th>
            <td>@Model.SecondName</td>
        </tr>
        <tr>
            <th>Имя</th>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <th>Отчество</th>
            <td>@Model.Patronymic</td>
        </tr>
        <tr>
            <th>Возраст</th>
            <td>@Model.Age</td>
        </tr>
        <tr>
            <th colspan="2" class="Center">Дполнительно</th>
        </tr>
        <tr>
            <th>Дата рождения</th>
            <td>@Model.Birthday.ToShortDateString()</td>
        </tr>
        <tr>
            <th>Принят на работу</th>
            <td>@Model.StartWork.ToShortDateString()</td>
        </tr>
        <tr>
            <th>Должность</th>
            <td>@Model.Position</td>
        </tr>
    </tbody>
</table>
<hr />
<p>@Html.ActionLink("Вернуться к списку", "Index")</p>
