@model IEnumerable<WebStore.ViewModels.EmployeeView>

@{
    Layout = "_Layout";
    ViewBag.Title = "Сотрудники";
}

<h3>@ViewBag.Title</h3>
<table class="table">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td><a asp-action="DetailsName" 
                       asp-route-FirstName="@employee.FirstName"
                       asp-route-SecondName="@employee.SecondName">
                        @employee.FirstName
                    </a>
                </td>
                <td>@Html.ActionLink(employee.SecondName, "Details", new { id = employee.Id })</td>
                <td>@employee.Patronymic</td>
                <td>@employee.Age</td>
            </tr>
        }
    </tbody>
</table>
