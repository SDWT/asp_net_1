@model CatalogViewModel

@{
    Layout = "_LayoutProducts";
    ViewData["Title"] = "Index";
}

<div class="row pad-botm">
    <div class="col-md-12">
        <h4 class="header-line">Список товаров</h4>
    </div>
</div>
<div class="row " style="padding-bottom:40px;">
    <div class="col-md-1">
        <a asp-action="Create" class="btn btn-success">Добавить</a>
    </div>
</div>
<div class="row " style="padding-bottom:40px;">
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.First().ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.First().Section)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.First().Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products.First().Price)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Order)
                    </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-warning"><i class="fa fa-edit fa-2x"></i></a>
                    </td>
                    <td>
                        <img src="~/images/shop/@item.ImageUrl" height="60" alt="@item.Name" />
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Section)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Order)
                        </td>*@
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger"><i class="fa fa-times fa-2x"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
