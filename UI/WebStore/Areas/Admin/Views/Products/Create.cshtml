@model WebStore.Domain.DTO.Products.ProductDTO

@{
    Layout = "_LayoutProducts";
    ViewData["Title"] = "Create";
}

<div class="row pad-botm">
    <div class="col-md-12">
        <h4 class="header-line">Добавить товар</h4>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="panel panel-primary">
            <div class="panel-heading">
                Новый Товар
            </div>
            <div class="panel-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Section.Id" class="control-label"></label>
                        <select asp-for="Section.Id" class="form-control" asp-items="ViewBag.SectionId">
                            <option selected="selected" disabled="disabled">
                                Выберите секцию
                            </option>
                        </select>
                        <span asp-validation-for="Section.Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Brand.Id" class="control-label"></label>
                        <select asp-for="Brand.Id" class="form-control" asp-items="ViewBag.BrandId">
                            <option selected="selected" value="-1">
                                Выберите бренд
                            </option>
                        </select>
                        <span asp-validation-for="Brand.Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageUrl" class="control-label"></label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Order" class="control-label"></label>
                        <input asp-for="Order" class="form-control" />
                        <span asp-validation-for="Order" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Brand.Name" value="null"/>
                    <input type="hidden" asp-for="Section.Name" value="null"/>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div style="padding-bottom:20px;">
    <a asp-action="Index" class="btn btn-primary">Вернуться к списку товаров</a>
</div>

